# UE Lahore AI Assistant Backend

OPENAI_API_KEY=your-openai-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=uoeaiassistant
PINECONE_ENVIRONMENT=us-east-1

LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT="RAG_FYP"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password
MEMORY_MAX_TURNS=10
MEMORY_TTL_SECONDS=1800

# Application Settings
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["http://localhost:4200", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# ── WhatsApp Cloud API ──────────────────────────────────────────────────────
# Get these from: https://developers.facebook.com → Your App → WhatsApp → API Setup
WHATSAPP_TOKEN=your-meta-permanent-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-secret
WHATSAPP_DEFAULT_NAMESPACE=bs-adp
WHATSAPP_API_VERSION=v21.0
